doctype html
head
  title Uteach
  meta(property='og:image', content='/images/social_preview.png')
  meta(property='og:image:type', content='image/png')
  meta(property='og:image:width', content='480')
  meta(property='og:image:height', content='240')
  link(rel='stylesheet', href='/css/reset.css')
  link(rel='stylesheet', href='/css/core.css')
  link(rel='stylesheet', href='/css/index.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto+Slab:400')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400')
  meta(name="viewport", content="width=device-width, initial-scale=1")
  script(async='true', src="https://www.googletagmanager.com/gtag/js?id=UA-111880667-1")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-111880667-1');

body
  .header.fixed-top.fullwidth.vcenter.hcenter.shadow
    img(src='/images/logo.png', width='154rem')

  .fullwidth.hcenter
    #optionsButtons.inlineFlex
      #buttonRegister.shadow.hcenter(onclick='registerMenu()')
        h1 Registar

      #buttonLogin.shadow.hcenter(onclick='loginMenu()')
        h1 Login

  .fullwidth.hcenter
    form.card.shadow.mt1.w37.h14(action='/login', method='POST')
      input(type='hidden', name='_csrf', value='#{csrf}')
      .mt2.hcenter
        label.mr3-5 Email
        input.w19.input(placeholder='exemplo_email@uteach.com', type='email' name='email', required='true')

      .mt2.hcenter
        label.mr1-5 Password
        input.w19.input(placeholder='************************', type='Password' name='password', required='true')

      input.mt2.mr6.bc1.w7.fr(value='Login', type='submit')

    form.card.shadow.mt1.w37.h30.hidden(action='/register', method='POST')
      input(type='hidden', name='_csrf', value='#{csrf}')
      .mt2.hcenter
        label.mr3-25 Nome
        input.w19.input(placeholder='Artur Filipe Machado', type='text' name='name', required='true')

      .mt2.hcenter
        label.mr3-5 Email
        input.w19.input(placeholder='exemplo_email@uteach.com', type='email' name='email', required='true')

      .mt2.hcenter
        label.mr1-25 Telemovel
        input.w19.input(placeholder='9826301549', type='tel' name='phone', required='true')

      .mt2.hcenter
        label.mr3-25 Curso
        input.w19.input(placeholder='Engenharia Informatica', type='text' name='course', required='true')

      .mt2.hcenter
        label.mr3-75 Grau
        input.w9.mr2.input(placeholder='Mestrado', type='text' name='rank', required='true')
        label.mr2-5 Ano
        input.w3-5.input(placeholder='2', type='number' name='year', required='true', min='0')

      .mt2.hcenter
        label.mr1-5 Password
        input.w19.input(placeholder='************************', type='Password' name='password', required='true')

      input.mt2.mr6.bc1.w7.fr(value='Registar', type='submit')

  script(src='/js/index.js')
